#include<iostream>
using namespace std;

int main() {
    int option, Number;
    cout << "For checking prime numbers(1) and for displaying prime numbers within a range(0)=";
    cin >> option;
    switch (option) {
        case 1:
            cout << "Enter the number:";
            cin >> Number;
            if (Number <= 1)
            {
                cout << "Number is not prime.";
            }
            else
            {
                bool Prime = true;
                for (int i = 2; i < Number; i++) {
                    if (Number % i == 0)
                    {
                        Prime = false;
                        break;
                    }
                }
                if (Prime)
                    cout << "Number is prime";
                else
                    cout << "Number is not prime.";
            }
            break;
